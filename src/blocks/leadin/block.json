{
	"$schema": "https://schemas.wp.org/wp/5.8/block.json",
	"apiVersion": 2,
	"name": "bu/leadin",
	"version": "0.0.0",
	"title": "Leadin",
	"icon": "block-default",
	"category": "bu",
	"description": "The opening headline and image of an article.",
	"textdomain": "bu-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style.css",
	"render": "file:./render.php",
	"attributes": {
		"head": {
			"type": "string"
		},
		"deck": {
			"type": "string"
		},
		"caption": {
			"type": "string"
		},
		"imageFocus": {
			"type": "string",
			"default": "center-middle"
		},
		"textPositionX": {
			"type": "string",
			"default": "x-center"
		},
		"textPositionY": {
			"type": "string",
			"default": ""
		},
		"wide": {
			"type": "boolean",
			"default": false
		},
		"box": {
			"type": "boolean",
			"default": false
		},
		"flip": {
			"type": "boolean",
			"default": false
		},
		"className": {
			"type": "string"
		},
		"themeColor": {
			"type": "string"
		},
		"primaryTerm": {
			"type": "string"
		},
		"metabar": {
			"type": "boolean",
			"default": true
		},
		"metabardate": {
			"type": "boolean",
			"default": false
		},
		"boxOpacity": {
			"type": "number",
			"default": 100
		},
		"videoUncropped": {
			"type": "boolean",
			"default": false
		},
		"url": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"className": true,
		"customClassName": true,
		"multiple": false,
        "anchor": true,
        "color": {
            "text": true,
            "background": true,
            "link": true,
            "gradients": true
        },
        "__bublocks_colorthemes": true
	},
	"styles": [
		{
			"name": "default",
			"label": "Default (uncropped unscaled)",
			"isDefault": true
		},
		{
			"name": "default-alt",
			"label": "Default Alternate Order"
		},
		{
			"name": "text-to-image",
			"label": "Text over Horizontal Image"
		},
		{
			"name": "image-to-text",
			"label": "Horizontal Image over Text"
		},
		{
			"name": "emphasis-on-text",
			"label": "Overlapping Text"
		},
		{
			"name": "text-over-image",
			"label": "Image with Text Overlay"
		},
		{
			"name": "side-by-side",
			"label": "Vertical Image and Text Side By Side"
		}
	],
	"example": {
		"attributes": {
			"head": "Porta Justo Sollicitudin",
			"deck": "Praesent commodo cursus magna, vel scelerisque nisl consectetur et.",
			"metabar": false,
			"className": "is-style-text-over-image",
			"backgroundType": "image",
			"backgroundUrl": "https://www.bu.edu/brand/files/2019/09/10-3084-BUCITYIII-029.jpg"
		}
	},
	"keywords": [
		"header", 
		"hero", 
		"banner", 
		"featured", 
		"headline",
		"lede",
		"opening"
	]
}